@article{nelson2004,
  title = {The Interaction of Giant Planets with a Disc with {{MHD}} Turbulence - {{IV}}. {{Migration}} Rates of Embedded Protoplanets},
  author = {Nelson, Richard P. and Papaloizou, John C. B.},
  year = {2004},
