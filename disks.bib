@article{kretke2007,
  title = {Grain {{Retention}} and {{Formation}} of {{Planetesimals}} near the {{Snow Line}} in {{MRI-driven Turbulent Protoplanetary Disks}}},
  author = {Kretke, Katherine A. and Lin, D. N. C.},
