  file = {/Users/tomhilder/Zotero/storage/3SFRR7PU/Desort et al. - 2007 - Search for exoplanets with the radial-velocity tec.pdf;/Users/tomhilder/Zotero/storage/7MFD878U/abstract.html}
}

